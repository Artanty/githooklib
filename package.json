{
    "name": "githooklib",
    "version": "1.2.2",
    "description": "Git hooks for version bumping and tag deployment",
    "scripts": {
        "postinstall": "node setup-hooks.js",
        "postuninstall": "git config --unset core.hooksPath || true"
    },
    "files": [
        "hooks",
        "lib",
        "setup-hooks.js"
    ],
    "keywords": [
        "git",
        "hooks",
        "version",
        "pre-commit",
        "post-commit",
        "tagging"
    ],
    "author": "Artyom Antoshkin",
    "license": "MIT",
    "dependencies": {
        "simple-git": "^3.0.0"
    }
}
